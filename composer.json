{
    "name": "rodoudcom/workflow-engine",
    "description": "A professional PHP workflow engine SDK similar to n8n for internal projects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rodoud Team",
            "email": "adnen.chouibi@rodoud.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Rodoud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rodoud\\WorkflowEngine\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
